                <h1> Occupation: <%= @stylist.occupation %></h1>
            </div>
        </div>
    

    <div class="stylist-details-price-and-style">
        <% @hairstyles.each do |hairstyle| %>
        <ol> 
            <li>
                <h2><%= hairstyle.style %></h2>
