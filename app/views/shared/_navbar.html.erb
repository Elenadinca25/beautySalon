<div class="navbar navbar-expand-sm navbar-light navbar-lewagon <%= yield(:navbar_class)%>">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://www.pngkit.com/png/detail/79-790674_instyle-beauty-salon-hairdresser-beauty-hair-salon-logo.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation" onclick="showMenu()">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="nav-links" id="navLinks">
    <ul class="navbar-nav mr-auto">
      <i class="fa fa-times" onclick="hideMenu()"></i>
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "BookYourStilist", stylists_path, class: "nav-link"%>
          </li> 
          <li class="nav-item">
            <%= link_to "AboutUs", "#about-us", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "ContactUs", salons_url, class: "nav-link" %>
          </li>
        
          <li class="nav-item dropdown">
            <%= image_tag "https://avatars.githubusercontent.com/u/55464617?v=4", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>

            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Appoiments", appointments_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
       
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
